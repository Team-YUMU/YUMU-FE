{
	//@tailwind components; 문 오류 방지
	"css.lint.unknownAtRules": "ignore",

	// 파일을 저장할 때마다 `eslint` 규칙에 따라 자동으로 코드를 수정
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit"
	},

	// 기본 포매팅 실행 방지
  "editor.formatOnSave": false,
  "cSpell.words": [
    "clsx",
    "Embla",
    "hookform",
    "lucide",
    "pretendard",
    "shadcn",
    "svgr",
    "tailwindcss",
    "YUMU"
  ]
}
